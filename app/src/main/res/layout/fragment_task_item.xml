<?xml version="1.0" encoding="utf-8"?>
<!-- Can change LinearLayout horzontal, to vertical, OR back to FrameLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TaskItemFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_task_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/fragment_task_item_title_text"/>

    <TextView
        android:id="@+id/fragment_task_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_task_item_description_text" />

</LinearLayout>